{
  "name": "sweetalert2-react16",
  "version": "0.6.0",
  "description": "Declarative SweetAlert 2 in React",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snoo-mpl/sweetalert2-react16.git"
  },
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib --ignore __tests__",
    "build:umd": "webpack src/index.js dist/sweetalert-react.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/sweetalert-react.min.js --config webpack.config.production.js",
    "build": "npm run clean && npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepare": "npm run clean && npm run build"
  },
  "author": "Michael PlÃ¶ckinger (https://github.com/snoo-mpl)",
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "alert",
    "sweetalert",
    "react",
    "component",
    "react-component"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^3.2.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "jest-cli": "^21.2.1",
    "react": "^16.1.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.1.1",
    "rimraf": "^2.6.2",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "lodash.pick": "^4.4.0",
    "mousetrap": "^1.6.1",
    "prop-types": "^15.6.0",
    "sweetalert2": "^7.0.3",
    "warning": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^16.0.0-0"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ]
  },
  "bugs": {
    "url": "https://github.com/snoo-mpl/sweetalert2-react16/issues"
  },
  "homepage": "https://github.com/snoo-mpl/sweetalert2-react16#readme",
  "directories": {
    "example": "examples",
    "lib": "lib"
  }
}
